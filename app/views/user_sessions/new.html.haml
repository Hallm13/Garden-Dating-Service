%h1 Login

- form_tag '/user_sessions' do

  = label_tag      :login
  = text_field_tag :login, params[:login] || '', :placeholder => 'user@example.com', :type => 'email', :autofocus => true

  = label_tag          :password
  = password_field_tag :password, '', :placeholder => 'Password'

  = submit_tag "Login"
